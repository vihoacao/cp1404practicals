# box.kv
BoxLayout:
    orientation: 'vertical'
    Button:
        text: 'Clear'
        on_press: app.root.ids.input_name.text = ''
    TextInput:
        id: input_name
        text: ''
    Button:
        text: 'Greet'
        on_press: app.handle_greet()
    Label:
        id: output_label
        text: "Enter your name"
        color: (1, 1, 0, 1)
